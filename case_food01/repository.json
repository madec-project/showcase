{
   "title": "Food Science & Technology",
   "documentFields": {
      "$title": {
         "visible": true,
         "label": "Titre",
         "get": "content.json.xtit",
         "trim": true
      },
      "$publisher": {
         "visible": true,
         "label": "Éditeur",
         "get": "content.json.lot",
         "mapping": {
            "els": "Elsevier",
            "rsc": "Royal Society of Chemistry",
            "oup": "Oxford University Press"
         }
      },
      "$revue": {
         "visible": true,
         "label": "Revue",
         "get": "content.json.issn",
         "mapping": {
            "0168-1605": "International Journal of Food Microbiology",
            "0260-8774": "Journal of Food Engineering",
            "0268-005X": "Food Hydrocolloids",
            "0278-6915": "Food and Chemical Toxicology",
            "0306-9192": "Food Policy",
            "0308-8146": "Food Chemistry",
            "0309-1740": "Meat Science",
            "0315-5463": "Canadian Institute of Food Science and Technology Journal",
            "0379-864X": "Chemical Senses",
            "0924-2244": "Trends in Food Science & Technology",
            "0925-5214": "Postharvest Biology and Technology",
            "0950-3293": "Food Quality and Preference",
            "0956-7135": "Food Control",
            "0958-6946": "International Dairy Journal",
            "0963-9969": "Food Research International",
            "1466-8564": "Innovative Food Science and Emerging Technologies"
         }
      },
      "$year": {
         "visible": true,
         "label": "Année",
         "get": "content.json.date"
      },
      "$theme": {
         "visible": true,
         "label": "Thème",
         "get": "content.json.cat_wos",
         "parseCSV": "/",
         "remove": "FOOD SCIENCE & TECHNOLOGY"
      },
      "$keyword": {
         "label": "Mot-clé",
         "get": "content.json.xkw",
         "trim": true,
         "parseCSV": "|",
         "foreach": {
            "trim": true
         },
         "remove": ""
      },
      "$url": {
         "label": "URL",
         "get": "content.json.ID",
         "prepend": "https://api.istex.fr/document/",
         "append": "/fulltext/pdf"
      },
      "$text": {
         "get": [
            "title",
            "publisher",
            "year",
            "theme",
            "keyword"
         ],
         "join": "|"
      }
   },
   "display": {
      "fields": {
         "title": "Titre",
         "publisher": "Éditeur",
         "year": "Année de publication",
         "theme": "Thème(s)",
         "keyword": "Mot(s)-clé(s)",
         "url": "URL"
      }
   },
   "pages": {
      "index": {
         "title": "Tableau de bord",
         "description": "Tableau de bord de l'étude",
         "help": " "
      },
      "chart": {
         "title": "Représentations graphiques",
         "description": "Détails de l'étude"
      },
      "documents": {
         "title": "Documents",
         "description": "Références des publications",
         "help": "Références des publications sous forme de tableau. Accès à la référence détaillée en cliquant sur un des champs."
      },
      "fields": {
         "title": "Champs bibliographiques",
         "description": "Intitulés des champs bibliographiques",
         "help": "Champs bibliographiques (en jason) avec leurs nombres d'occurences"
      },
      "display": {
         "title": "Notice",
         "description": "Notice détaillée"
      }
   },
   "corpusFields": {
      "$titreInstance": {
         "visible": true,
         "icon": "r-globe",
         "template": "Thématique \"Food Science & Technology\""
      },
      "$nbnotices": {
         "visible": true,
         "label": "notice(s)",
         "icon": "globe",
         "$?": "local:///compute.json?o=count&f=wid",
         "parseJSON": true,
         "get": "data.0.value",
         "cast": "number"
      },
      "$dates": {
         "$?": "local:///compute.json?operator=distinct&field=year&itemsPerPage=10000000",
         "parseJSON": true,
         "select": ".data ._id",
         "foreach": {
            "cast": "number"
         }
      },
      "$anneeDebut": {
         "get": "dates",
         "min": true
      },
      "$anneeFin": {
         "get": "dates",
         "max": true
      },
      "$periode": {
         "visible": true,
         "icon": "calendar",
         "template": "{{anneeDebut}}-{{anneeFin}}"
      },
      "$nbannee": {
         "icon": " ",
         "visible": true,
         "default": 0,
         "label": "année(s)",
         "get": "dates",
         "size": true
      }
   },
